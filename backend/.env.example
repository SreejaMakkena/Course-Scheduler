# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/course-scheduler

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
